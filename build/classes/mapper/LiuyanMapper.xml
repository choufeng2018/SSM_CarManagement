<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.dao.LiuyanDao">

	<resultMap id="liuyanResultMap" type="com.entity.Liuyan">   
        <id property="id" column="id"/>    
        <result property="kehuid" column="kehuid"/>  
        <result property="name" column="name"/>  
        <result property="ltitle" column="ltitle"/>  
        <result property="neirong" column="neirong"/>  
        <result property="shijian1" column="shijian1"/>  
        <result property="zhuangtai" column="zhuangtai"/>
        <result property="huifu" column="huifu"/>
        <result property="shijian2" column="shijian2"/>
        <result property="workid" column="workid"/>
       
     </resultMap>  	

	<!-- 插入到数据库 -->
	<insert id="insertBean"
		parameterType="com.entity.Liuyan">
		insert into t_liuyan (kehuid,ltitle,name,neirong,shijian1,zhuangtai,huifu,shijian2,workid) 
		values (#{kehuid},#{ltitle},#{name},#{neirong},#{shijian1},#{zhuangtai},#{huifu},#{shijian2},#{workid})
	</insert>
	
	<!-- 根据ID删除数据库的记录 -->
	<delete id="deleteBean"
		parameterType="int">
		delete from t_liuyan
		where id=#{id}	
	</delete>
	
	<!-- 根据ID更新数据库的记录 -->
	<update id="updateBean"
		parameterType="com.entity.Liuyan">
		update
			t_liuyan 
		<set>
			<trim suffixOverrides=",">
				<if test="kehuid !=null">
					kehuid=#{kehuid},
				</if>
				<if test="name !=null">
					name=#{name},
				</if>
				<if test="ltitle !=null">
					ltitle=#{ltitle},
				</if>
				<if test="neirong !=null">
					neirong=#{neirong},
				</if>
				<if test="shijian1 !=null">
					shijian1=#{shijian1},
				</if>
				<if test="zhuangtai !=null">
					zhuangtai=#{zhuangtai},
				</if>
				<if test="huifu !=null">
					huifu=#{huifu},
				</if>
				<if test="shijian2 !=null">
					shijian2=#{shijian2},
				</if>
				<if test="workid !=null">
					workid=#{workid}
				</if>
				
			</trim>
		</set>
		where 
			id=#{id} 
 
	</update>
	

	<select id="selectBeanById" parameterType="com.entity.Liuyan"
		resultMap="liuyanResultMap" >
		select * from t_liuyan where id=#{id}   
	</select>
	
	

      
   
    <select id="selectBeanList" parameterType="string"
		resultMap="liuyanResultMap" >
		select * from t_liuyan 
			where 1=1
        <if test="ltitle != '' and ltitle != null">    
            and ltitle like '%' #{ltitle} '%'
        </if>   
        <if test="zhuangtai != '' and zhuangtai != null">    
            and zhuangtai like '%' #{zhuangtai} '%'
        </if>    
        <if test="kehuid !=0">    
            and kehuid = #{kehuid} 
        </if>    
         <if test="workid !=0">    
            and workid = #{workid} 
        </if>   
       
        order by id desc
		limit #{start}, #{limit}
			
	</select>
	
	
	<select id="selectBeanCount" parameterType="string"
		resultType="int" >
		select count(id) from t_liuyan 
			where 1=1
        <if test="ltitle != '' and ltitle != null">    
            and ltitle like '%' #{ltitle} '%'
        </if>   
        <if test="zhuangtai != '' and zhuangtai != null">    
            and zhuangtai like '%' #{zhuangtai} '%'
        </if>    
        <if test="kehuid !=0">    
            and kehuid = #{kehuid} 
        </if>    
         <if test="workid !=0">    
            and workid = #{workid} 
        </if>  
	</select>
	
	
	
	
	
</mapper>







